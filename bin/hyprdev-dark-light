#!/usr/bin/env bash

while true; do
  now=$(date +%s)
  current=$(cat ~/.config/colorschemes/.current-theme)
  if [[ "$now" -ge "$(date -d "20:00" +%s)" ]]; then
    if [[ "$current" == "light" ]]; then
      hyprdev-apply-theme "catppuccin" &
      disown
    fi
  elif [[ "$now" -ge "$(date -d "08:00" +%s)" ]]; then
    if [[ "$current" == "light" ]]; then
      continue
    fi
    hyprdev-apply-theme "light" &
    disown
  fi
done
