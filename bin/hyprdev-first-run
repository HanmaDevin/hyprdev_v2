#!/usr/bin/env bash

if [ -f ~/.first_run ]; then
  rm -f ~/.first_run

  notify-send "    Learn Keybindings" "Super + ? for cheatsheet.\nSuper + Space for application launcher.\nSuper + Alt + Space for Hyprdev Menu." -u critical
  notify-send "󱨑    Setup Firewall" "Click to Setup" -u critical
  if ! ping -c3 -W1 1.1.1.1 >/dev/null 2>&1; then
    notify-send "󰖩    Wi-Fi" "Click to Setup"
  fi
fi
