#!/usr/bin/env bash

KEYBINDS=""

KEYBINDS+=" + Shift + /         Open Cheatsheet\n"
KEYBINDS+=" + Return            Open Terminal\n"
KEYBINDS+=" + I                 Install Software\n"
KEYBINDS+=" + Shift + T         Select Theme\n"
KEYBINDS+=" + Alt + Space       Open Hyprdev Menu\n"
KEYBINDS+=" + Q                 Close Window\n"
KEYBINDS+=" + Backspace         Lock Screen\n"
KEYBINDS+=" + E                 Open Filemanager\n"
KEYBINDS+=" + V                 Toggle floating Window\n"
KEYBINDS+=" + P                 Pick Color on Screen\n"
KEYBINDS+=" + F                 Toggle Fullscreen\n"
KEYBINDS+="Alt + Shift           Toggle Keyboard Layout\n"
KEYBINDS+="Alt + Tab             Show Window Picker\n"
KEYBINDS+=" + Space             Open App Launcher\n"
KEYBINDS+=" + N                 Display next Wallpaper\n"
KEYBINDS+=" + W                 Select new Wallpaper\n"
KEYBINDS+=" + Delete            Open Logout Menu\n"
KEYBINDS+=" + C                 Show Clipboard History\n"
KEYBINDS+=" + S                 Start Screensaver\n"
KEYBINDS+=" + [0-9]             Move to Workspace\n"
KEYBINDS+=" + Shift + [0-9]     Move Window to Workspace\n"
KEYBINDS+=" + L                 Focus Window Right\n"
KEYBINDS+=" + H                 Focus Window Left\n"
KEYBINDS+=" + K                 Focus Window Up\n"
KEYBINDS+=" + J                 Focus Window Down\n"
KEYBINDS+=" + Alt + L   ()     Resize Right\n"
KEYBINDS+=" + Alt + H   ()     Resize Left\n"
KEYBINDS+=" + Alt + K   ()     Resize Up\n"
KEYBINDS+=" + Alt + J   ()      Resize Down\n"
KEYBINDS+=" + Shift + L ()     Move Window Right\n"
KEYBINDS+=" + Shift + H ()     Move Window Left\n"
KEYBINDS+=" + Shift + K ()     Move Window Up\n"
KEYBINDS+=" + Shift + J ()     Move Window Down\n"
KEYBINDS+=" + B                 Open Browser\n"
KEYBINDS+=" + M                 Open System Monitor\n"
KEYBINDS+=" + CTRL + V          Open Audio Settings\n"
KEYBINDS+=" + Shift + S         Take Screenshot\n"
KEYBINDS+=" + Shift + R         Reload Waybar"

echo -e "$KEYBINDS" | rofi -dmenu -p "Menu" -theme ~/.local/share/rofi/themes/cheatsheet.rasi
