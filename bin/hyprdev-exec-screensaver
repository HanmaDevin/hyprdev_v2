# Exit early if we don't have the tte show
if ! command -v tte &>/dev/null; then
  exit 1
fi

exit_screensaver() {
  hyprctl keyword cursor:invisible false
  pkill -x tte 2>/dev/null
  pkill -f org.hyprdev.screensaver 2>/dev/null
  exit 0
}
# Exit the screensaver on signals and input from keyboard and mouse
trap exit_screensaver SIGINT SIGTERM SIGHUP SIGQUIT

# Exit early if screensave is already running
pgrep -f org.hyprdev.screensaver && exit 0

focused=$(hyprctl monitors -j | jq -r '.[] | select(.focused == true).name')

for m in $(hyprctl monitors -j | jq -r '.[] | .name'); do
  hyprctl dispatch focusmonitor $m

  hyprctl dispatch exec -- \
    kitty --class=org.hyprdev.screensaver \
    --override font_size=18 \
    --override window_padding_width=0 \
    -e hyprdev-screensaver
done

hyprctl dispatch focusmonitor $focused
